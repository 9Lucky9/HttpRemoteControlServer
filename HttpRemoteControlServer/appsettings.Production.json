{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8080"
      },
      "HttpsInlineCertAndKeyFile": {
        "Url": "https://*:8081",
        "Certificate": {
          "Path": "/opt/RemoteControlServerCerts/example.com.crt",
          "KeyPath": "/opt/RemoteControlServerCerts/example.com.key"
        }
      }
    }
  }
}